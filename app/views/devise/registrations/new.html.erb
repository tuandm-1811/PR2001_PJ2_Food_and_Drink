<section class="login_register">			
    <div class="container">					
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h1>Sign Up</h1>
                <div class="login-container">
                    <div class="row">			
                        <div class="col-lg-12 col-md-12 col-12">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <div class="login-form">	
                                    <%= render "devise/shared/error_messages", resource: resource %>
                                            
                                    <div class="form-group">
                                        <%= f.label :Name %>
                                        <%= f.text_field :username , class:"video-form" ,id:"fullName", placeholder:"Full Name" %>
                                    </div>
                                    <div class="form-group">
                                      <%= f.label :Birth%>
                                      <%= f.date_field :birth, class: 'form-control'%>
                                    </div>

                                    <div class="form-group radio form-check-inline">
                                        <%= f.label :Men, class: "form-check-label"%>
                                        <%= f.radio_button :gender, "women", class:"form-check-input"%><br />
                                        <%= f.label :Women, class: "form-check-label"%>
                                        <%= f.radio_button :gender, "men", class:"form-check-input"%><br />
                                        <%= f.label :Other, class: "form-check-label"%>
                                        <%= f.radio_button :gender, "other", class:"form-check-input"%><br />
                                    </div>
                                    <div class="form-group">
                                        <%= f.label :email %><br />
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",id:"emailAddress" ,placeholder:"Email Address" %>
                                    </div>

                                    <div class="form-group">
                                        <%= f.label :password %><br />
                                        <%= f.password_field :password, autocomplete: "new-password" ,id:"password1" ,class:"form-control",placeholder:"Password" %>
                                    </div>
        
                                    <div class="form-group">
                                        <%= f.label :password_confirmation %><br>
                                        <%= f.password_field :password_confirmation, autocomplete: "new-password",id:"password1" ,class:"form-control",placeholder:"Password confirmation" %>
                                    </div>
        
                                    <div class="actions">
                                        <%= f.submit "Sign up",class:"btn btn-warning" %>
                                        <%= link_to "Back to Login", signin_path %> 
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


